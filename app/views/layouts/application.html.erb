<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application', "jquery-ui" %>
    <%= javascript_include_tag "jquery", "jquery-ui" %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="user_status" style="float:right;">
        <% if current_user %>
          Welcome <%= link_to h(current_user.email), account_path %>! Not you?
          <%= link_to "Log out", logout_path %>
        <% else %>
          <%= link_to "Sign up", signup_path %> or
          <%= link_to "log in", login_path %>.
        <% end %>
      </div>
	    <br clear="all" />

    	<div id="nav">
				<%= link_to "Home", root_path %> | <%= link_to "Create", new_shipment_path %> | <%= link_to "Pending", shipments_path %> | <%= link_to "Delivered", shipments_path %> | <%= link_to "Invoiced", shipments_path %>
			</div>
			
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>

      <%= yield %>
    </div>
  </body>
</html>
