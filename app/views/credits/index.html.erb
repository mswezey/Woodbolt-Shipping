<% title "Credits" %>

<% content_for :head do -%>
	<%= jqgrid_stylesheets %> 
	<%= jqgrid_javascripts %>
<% end -%>

<%= jqgrid("Credits", "credits", "/credits",
	[
		{ :field => "reference_number", :label => "Reference #", :width => 100, :resizable => false },
		{ :field => "shipper_name", :label => "Shipper", :width => 55 },
		{ :field => "consignee_name", :label => "Consignee", :width => 55 },
		{ :field => "bol_pro_number", :label => "BOL/PRO #", :width => 180, :resizable => false },
		{ :field => "carrier_id", :label => "Carrier", :width => 80, :resizable => false },
		{ :field => "carrier_invoice_number", :label => "Carrier Invoice #", :resizable => false, :width => 205 },
		{ :field => "credit_amount", :label => "Credit Amount", :formatter => 'currency', :editable => true, :width => 100, :resizable => false },
		{ :field => "credit_memo_number", :label => "Credit Memo #", :editable => true, :width => 100, :resizable => false },
		{ :field => "credit_memo", :label => "Credit Memo", :editable => true, :resizable => false },
		{ :field => "debit_memo_number", :label => "Debit Memo #", :editable => true, :width => 90, :resizable => false }
	],
			{ :edit => true, :inline_edit => true, :delete => false, :edit_url => "/credits/post_data" }
) %>