<% form_for @shipment, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
<div class="col-left">
	<p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments, :rows => 10 %>
  </p>
</div>

<div class="col-left">
	<p>
    <%= f.label :submitter_id, "Submitter" %><br />
    <%= current_user.name %>
  </p>
  <p>
    <%= f.label :assigned_to_id, "Assigned To" %><br />
