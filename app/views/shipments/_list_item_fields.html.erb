<div class="fields">
	<div style="float: left;">
    <%= f.label :item_id %> <a class='new-item' href='#'>add new</a><br />
    <%= f.select :item_id, Item.all.collect {|u| ["#{u.name} (#{u.uom})", u.id]}, {:include_blank => true}, {:class => 'item-select'} %> <a href="#" class="edit-item">edit</a>
  </div>
  <div style="float: left; margin-left: 25px;">
    <label>UOM</label><br />
    <p class="item-uom"><%= f.object.item.uom unless f.object.new_record? %></p>
  </div>
  <div style="float: left; margin-left: 25px;">
    <%= f.label :qty %><br />
    <%= f.text_field :qty, :style => "width: 100px" %>
  </div>
  <div style="float: left; margin-left: 25px;">
    <%= f.label :lot_number %><br />
    <%= f.text_field :lot_number, :style => "width: 100px" %>
  </div>
<br class="clear" />
  <div style="margin-top: 10px;">
    <label>ITEM DESCRIPTION</label><br />
    <p class="item-description"><%= f.object.item.description unless f.object.new_record? %></p>
  </div>
	<br />
	<%= link_to_remove_fields "<img src='/images/trash.png' />", f %>
</div>