<% content_for :head do -%>
	<%= jqgrid_stylesheets %> 
	<%= jqgrid_javascripts %>
<% end -%>

<%= jqgrid("Delivered Shipments", "shipments", "/shipments/delivered",
	[
		{ :field => "reference_number", :label => "Ref #", :width => 55 },
		{ :field => "bol_date", :label => "BOL Date", :width => 75, :editable => true, :resizable => false, :class => 'date' },
		{ :field => "bol_pro_number", :label => "BOL/PRO #", :editable => true, :width => 180, :resizable => false	 },
		{ :field => "carrier_id", :label => "Carrier", :editable => true, :edittype => "select", :width => 80, :resizable => false,
				  :editoptions => { :value => Carrier.all.collect {|u| [u.id, u.name]} } },
		{ :field => "carrier_invoice_number", :label => "Carrier Invoice #", :editable => true, :width => 265, :resizable => false },
		{ :field => "cost", :label => "Cost", :editable => true, :formatter => 'currency', :width => 100, :resizable => false },
		{ :field => "classification_id", :label => "Classification", :width => 110, :resizable => false, :align => "center" },
		{ :field => "has_credit", :label => "Credits", :editable => true, :edittype => "checkbox", :width => 70, :resizable => false, :editoptions => { :value => "Yes:No" }, :formatter => 'checkbox', :resizable => false, :align => "center" },
		{ :field => "invoice_link", :label => "Invoiced", :editable => false, :width => 65, :resizable => false, :align => "center" }
					
	]	,
			{ :edit => true, :inline_edit => true, :delete => true, :edit_url => "/shipments/delivered_post_data" }
) %>