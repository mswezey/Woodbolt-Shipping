<% content_for :head do -%>
	<%= jqgrid_stylesheets %> 
	<%= jqgrid_javascripts %>
<% end -%>

<%= jqgrid("Invoiced Shipments", "shipments", "/shipments/invoiced",
	[
		{ :field => "id", :label => "Ref #", :resizable => false, :width => "55" },
		{ :field => "shipper_name_cache", :label => "Shipper", :width => 65 },
		{ :field => "consignee_name_cache", :label => "Consignee", :width => 65 },
		{ :field => "bol_date", :label => "BOL Date", :width => 75, :editable => true, :resizable => false, :class => 'date' },
		{ :field => "bol_pro_number", :label => "BOL/PRO #", :editable => true, :resizable => false, :width => "130" },
		{ :field => "carrier_name_cache", :label => "Carrier", :editable => true, :edittype => "select", :resizable => false, :width => "80",
				  :editoptions => { :value => Carrier.all.collect {|u| [u.id, u.name]} } },
		{ :field => "carrier_invoice_number", :label => "Carrier Invoice #", :editable => true, :resizable => false, :width => "195" },
		{ :field => "cost", :label => "Cost", :editable => true, :formatter => 'currency', :resizable => false, :width => "70" },
		{ :field => "classification_id", :label => "Classification", :resizable => false, :width => "100", :align => "center" },
		{ :field => "credits_applied", :label => "Apply Credits", :resizable => false, :width => "90", :align => "center" },
		{ :field => "debit_memo_number", :label => "Debit Memo #", :editable => true, :resizable => false, :width => "85" }
	],
		{ :edit => true, :inline_edit => true, :delete => true, :edit_url => "/shipments/invoiced_post_data" }
) %>