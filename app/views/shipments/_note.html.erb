<p class="<%= note.shipment ? "shipment-note" : "general-note" %>">
	<%#= image_tag note.user.picture.url(:thumb) if note.user.picture.exists? %>
	<span class="comment-name"><%= note.user.name %></span>
	<%= note.content %>
	<br />
	<span class="time-ago"><%= time_ago_in_words note.created_at %> ago <%= "on #{note.shipment.reference_number}" if note.shipment %></span>
	<br class="clear" />
</p>