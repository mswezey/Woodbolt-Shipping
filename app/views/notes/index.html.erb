<% title "Notes" %>

<table>
  <tr>
    <th>Shipment</th>
    <th>User</th>
    <th>Content</th>
  </tr>
  <% for note in @notes %>
    <tr>
      <td><%=h note.shipment_id %></td>
      <td><%=h note.user_id %></td>
      <td><%=h note.content %></td>
      <td><%= link_to "Show", note %></td>
      <td><%= link_to "Edit", edit_note_path(note) %></td>
      <td><%= link_to "Destroy", note, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Note", new_note_path %></p>
